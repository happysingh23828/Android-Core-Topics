<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".resources.AnimationDemoActivity">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include layout="@layout/layout_header"/>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPropertyObjectAnimator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AnimationButtonStyle"
                android:background="@color/md_blue_400"
                android:text="@string/property_object_animation"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPropertyValueAnimator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AnimationButtonStyle"
                android:background="@color/md_red_400"
                android:text="@string/property_value_animation"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnViewTweenAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AnimationButtonStyle"
                android:background="@color/md_green_400"
                android:text="@string/view_tween_animation"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnViewFrameAnimation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AnimationButtonStyle"
                android:background="@color/md_teal_A700"
                android:text="@string/view_frame_animation"
        />

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivBattery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"/>


    </LinearLayout>


</ScrollView>